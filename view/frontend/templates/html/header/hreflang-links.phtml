/**
 * @var $block Magento\Framework\View\Element\Template
 * @var $viewModel Egooty\SeoToolkits\ViewModel\Html\Header\HreflangData
 */
?>
<?php
$viewModel = $block->getHreflangData();
?>
<!-- canonical link -->
<?php if ($viewModel->isEnableCanonical()): ?>
    <link rel="canonical" href="<?= /* @noEscape */$viewModel->getCanonicalUrl() ?>" />
<?php endif; ?>
<!-- hreflang link -->
<?php if ($viewModel->isEnableXDefault()): ?>
    <link rel="alternate" hreflang="x-default" href="<?= /* @noEscape */$viewModel->getXDefaultUrlWithCode() ?>" />
<?php endif; ?>
<?php foreach ($viewModel->getLinks() as $link): ?>
    <?php if (!empty($link['code']) && !empty($link['url'])): ?>
        <link rel="alternate" href="<?= /* @noEscape */ $link['url'] ?>" hreflang="<?= /* @noEscape */ $link['code'] ?>" />
    <?php endif; ?>
<?php endforeach; ?>