<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="seo_toolkits" translate="label" type="text" sortOrder="12033682130" showInDefault="1" showInWebsite="0" showInStore="0">
            <class>separator-top</class>
            <label>SEO ToolKits</label>
            <tab>egooty</tab>
            <resource>Egooty_SeoToolkits::config_egooty_seotoolkits</resource>
            <group id="hreflang_config" sortOrder="10" showInWebsite="1" showInStore="1"
                showInDefault="1" translate="label">
                <label>Hreflang Configuration</label>
                <field id="enable" type="select" sortOrder="10" showInWebsite="1" showInStore="1"
                    showInDefault="1" translate="label">
                    <label>Module</label>
                    <comment>Enable Module to use all features</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="enable_product_page" type="select" sortOrder="20" showInWebsite="1"
                    showInStore="1" showInDefault="1" translate="label">
                    <label>Enable For Product Page</label>
                    <comment/>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="enable_category_page" type="select" sortOrder="30" showInWebsite="1"
                    showInStore="1" showInDefault="1" translate="label">
                    <label>Enable For Category Page</label>
                    <comment/>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="enable_cms_page" type="select" sortOrder="40" showInWebsite="1"
                    showInStore="1" showInDefault="1" translate="label">
                    <label>Enable For CMS Page</label>
                    <comment/>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="enable_x_default" type="select" sortOrder="50" showInWebsite="1"
                    showInStore="1" showInDefault="1" translate="label">
                    <label>Enable X Default</label>
                    <comment/>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="locale_config" sortOrder="20" showInWebsite="1" showInStore="1"
                showInDefault="1" translate="label">
                <label>Locale Configuration</label>
                <field id="enable_locale" type="multiselect" sortOrder="10" showInWebsite="1"
                    showInStore="1" showInDefault="1" translate="label">
                    <label>Enable For Locale(s)</label>
                    <comment/>
                    <source_model>Egooty\SeoToolkits\Model\Config\Source\EnableLocale</source_model>
                </field>
            </group>
            <group id="canonical_config" sortOrder="30" showInWebsite="1" showInStore="1"
                   showInDefault="1" translate="label">
                <label>Canonical Configuration</label>
                <field id="canon_landing" type="select" sortOrder="10" showInWebsite="1" showInStore="1"
                       showInDefault="1" translate="label">
                    <label>Use Canonical Link Meta Tag For Home</label>
                    <comment>Default magento don't have this function</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="canon_cms_page" type="select" sortOrder="20" showInWebsite="1"
                       showInStore="1" showInDefault="1" translate="label">
                    <label>Use Canonical Link Meta Tag For CMS Page</label>
                    <comment>Default magento don't have this function</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
